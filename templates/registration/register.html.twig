
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>

        {% block body %}
        <div class="login-page">
            <form method="post" class="login-form">
                {% for flash in app.flashes('error') %}
                    <div class="alert alert-danger">{{ flash }}</div>
                {% endfor %}

                <h1>Register</h1>

                <label for="inputPseudo">Pseudo</label>
                <input type="text" name="pseudo" id="inputPseudo" class="form-control" required>

                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" required>

                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <button class="btn btn-login w-100" type="submit">Register</button>
                
                <a href = "{{path('home')}}"><button class="btn btn-login w-100" type="button">Return Home</button></a>
            </form>
        </div>
        {% endblock %}

        {% block javascripts %}
                    {% block importmap %}{{ importmap('app') }}{% endblock %}
                {% endblock %}
</body>
</html>
