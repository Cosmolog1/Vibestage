{% extends 'base.html.twig' %}

{% block title %}Hello AdminCategoryController!{% endblock %}

{% block body %}

<div class="show-single">
    <br>
    <h2>{{ event.name }}</h2>
    <br>
    <tr>
        <div class = "show-single-image">
            <td>
                {% if event.image %}
                    <img src="{{ asset(event.image) }}" alt="Image de l'event">
                {% else %}
                    <em>Aucune image</em>
                {% endif %}
            </td>
        </div>
    </tr>
    <br>
    <p>Date Start : {{ event.dateStart|date('d/m/Y H:i') }}</p>
    <br>
    <p>Date End : {{ event.dateEnd|date('d/m/Y H:i') }}</p>
    <br>
    <p>Lien : {{ event.url }}</p>
    <br>
    <p>Artiste :     
        {% if event.artistes|length > 0 %}
            {% for artiste in event.artistes %}
                {{ artiste.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        {% else %}
            Aucun artiste associ√©
        {% endif %}
    </p>
    <br>
    <p>Content : <br><br>{{ event.content }}</p>
    <br>
    <div class = "comment">
        <ul>
            {% for comment in event.comment %}
                <li>{{ comment.content }}</li>
            {% endfor %}
        </ul>                          
        {{ form_start(form) }}
        {{ form_row(form.content) }}
        <button type="submit">Soumettre</button>
        {{ form_end(form) }}
    </div>
</div>


{% endblock %}