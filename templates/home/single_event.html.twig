{% extends 'base.html.twig' %}

{% block title %}Hello AdminCategoryController!{% endblock %}

{% block body %}

<div class="show-single">
    <br>
    <h2>{{ event.name }}</h2>
    <br>
    <tr>
        <div class = "show-single-image">
            <td>
                {% if event.image %}
                    <img src="{{ asset(event.image) }}" alt="Image de l'event">
                {% else %}
                    <em>Aucune image</em>
                {% endif %}
            </td>
        </div>
    </tr>
    <br>
    <p>Date Start : {{ event.dateStart|date('d/m/Y H:i') }}</p>
    <br>
    <p>Date End : {{ event.dateEnd|date('d/m/Y H:i') }}</p>
    <br>
    <p>Lien : {{ event.url }}</p>
    <br>
    <p>Artiste :     
        {% if event.artistes|length > 0 %}
            {% for artiste in event.artistes %}
                {{ artiste.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        {% else %}
            Aucun artiste associé
        {% endif %}
    </p>
    <br>
    <p>Content : <br><br>{{ event.content }}</p>
    <br>
    <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-lg-12">
                <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                    <div class="card-body p-4">

                        {# FORMULAIRE COMMENTAIRE #}

                        {{ form_start(form) }}
                            <div class="form-outline mb-4">
                                {{ form_widget(form.content, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Écrire un commentaire...'
                                }
                                }) }}
                                {{ form_label(form.content, '+ Ajouter un commentaire', {'label_attr': {'class': 'form-label'}}) }}
                            </div>
                            <button class="btn btn-primary">Envoyer</button>
                        {{ form_end(form) }}

                        <hr>

                        {# LISTE DES COMMENTAIRES #}

                        {% for comment in comments %}
                        <div class="card mb-4">
                            <div class="card-body">
                                <p>{{ comment.content }}</p>
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex flex-row align-items-center">
                                        <p class="small mb-0 ms-2">
                                            {{ comment.user ? comment.user.pseudo : '' }}
                                        </p>
                                    </div>
                                    <div class="d-flex flex-row align-items-center">
                                        <p class="small text-muted mb-0">
                                            {{ comment.createdAt ? comment.createdAt|date('d/m/Y') : '' }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% else %}
                            <p class="text-muted">Aucun commentaire pour le moment.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}