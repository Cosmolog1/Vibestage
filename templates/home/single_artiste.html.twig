{% extends 'base.html.twig' %}

{% block title %}Hello AdminCategoryController!{% endblock %}

{% block body %}

    <div class="show-single">
        <br>
            <h2>{{ artiste.name }}</h2>
        <br>
        <tr>
            <div class = "show-single-image">
                <td>
                    {% if artiste.image %}
                        <img src="{{ asset(artiste.image) }}" alt="Image de l'artiste">
                    {% else %}
                        <em>Aucune image</em>
                    {% endif %}
                </td>
            </div>
        </tr>
        <br>
        <p>Musique : {% for category in artiste.categories %}
                    {{ category.name }}
                {% else %}
                    <span>Aucune cat√©gorie</span>
                {% endfor %}</p>
        <br>
        <p>Genre : {{ artiste.genre }}</p>
        <br>
        <p>Abonn√©es : {{ artiste.nbAbonne }}</p>
        <br>
        <p>Content : <br><br>{{ artiste.content }}</p>
        <br>
        <p>Country : {{ artiste.country }}</p> 
        <br>
        {% if events is not empty %}
            <h3 class="mt-5">üé´ Concerts √† venir</h3>
                <ul>
                    {% for event in events %}
                        <li class="mb-3">
                            <strong>{{ event.name }}</strong><br>
                            üìç {{ event._embedded.venues[0].name ?? '' }} - 
                            {{ event._embedded.venues[0].city.name ?? '' }} ({{ event._embedded.venues[0].country.countryCode ?? '' }})<br>
                            üóìÔ∏è {{ event.dates.start.localDate ?? '' }}<br>
                            {% if event.url is defined %}
                                <a href="{{ event.url }}" target="_blank" class="btn btn-primary btn-sm">Acheter un billet</a>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
        {% else %}
            <p class="mt-5">Aucun concert trouv√© pour {{ artiste.name }}.</p>
        {% endif %}

    <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-lg-12">
                <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                    <div class="card-body p-4">

                        {# FORMULAIRE COMMENTAIRE #}

                        {{ form_start(form) }}
                            <div class="form-outline mb-4">
                                {{ form_widget(form.content, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': '√âcrire un commentaire...'
                                }
                                }) }}
                                {{ form_label(form.content, '+ Ajouter un commentaire', {'label_attr': {'class': 'form-label'}}) }}
                            </div>
                            <button class="btn btn-primary">Envoyer</button>
                        {{ form_end(form) }}

                        <hr>

                        {# LISTE DES COMMENTAIRES #}

                        {% for comment in comments %}
                        <div class="card mb-4">
                            <div class="card-body">
                                <p>{{ comment.content }}</p>
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex flex-row align-items-center">
                                        <p class="small mb-0 ms-2">
                                            {{ comment.user ? comment.user.pseudo : '' }}
                                        </p>
                                    </div>
                                    <div class="d-flex flex-row align-items-center">
                                        <p class="small text-muted mb-0">
                                            {{ comment.createdAt ? comment.createdAt|date('d/m/Y') : '' }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% else %}
                            <p class="text-muted">Aucun commentaire pour le moment.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




